# Force text files to use LF line endings in the repository
*.md         text eol=lf
*.js         text eol=lf
*.ts         text eol=lf
*.jsx        text eol=lf
*.tsx        text eol=lf
*.json       text eol=lf
*.prettierrc text eol=lf
*.eslintrc   text eol=lf
*.html       text eol=lf
*.css        text eol=lf
*.scss       text eol=lf
*.toml       text eol=lf
*.rs         text eol=lf
*.lock       text eol=lf
*.yml        text eol=lf
*.yaml       text eol=lf
*.sh         text eol=lf
*.bat        text eol=crlf
*.ps1        text eol=crlf

# Ensure these files are treated as binary
*.png        binary
*.jpg        binary
*.jpeg       binary
*.gif        binary
*.webp       binary
*.ico        binary
*.ttf        binary
*.woff       binary
*.woff2      binary
